{
  "name": "@qingshaner/jsr-release",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@10.6.2",
  "description": "Publish your package to JSR registry.",
  "author": {
    "name": "qingshaner",
    "url": "https://github.com/Jon-a-than"
  },
  "license": "ISC",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "jsr-release": "./bin/cli.mjs"
  },
  "files": ["dist"],
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "vite build",
    "changeset-version": "changeset version && node ./bin/cli.mjs --allowDirty version --sync",
    "changeset-publish": "changeset publish && node ./bin/cli.mjs publish",
    "format": "biome format . --write",
    "lint": "biome lint . --write && eslint . --fix",
    "prepare": "simple-git-hooks",
    "test": "vitest run",
    "test:cov": "vitest run --coverage"
  },
  "dependencies": {
    "@pnpm/exportable-manifest": "^1000.0.8",
    "@pnpm/fs.find-packages": "^1000.0.7",
    "@pnpm/workspace.find-packages": "^1000.0.15",
    "@pnpm/workspace.read-manifest": "^1000.1.1",
    "@qingshaner/utility-server": "^0.2.0",
    "@qingshaner/utility-shared": "^0.2.0",
    "citty": "^0.1.6",
    "consola": "^3.4.0",
    "jsr": "^0.13.4",
    "package-manager-detector": "^1.0.0",
    "valibot": "1.0.0-rc.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.28.1",
    "@qingshaner/eslint-config": "^0.12.0",
    "@types/node": "^22.13.10",
    "@vitest/coverage-v8": "^3.0.8",
    "eslint": "^9.22.0",
    "lint-staged": "^15.5.0",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.8.2",
    "vite": "^6.2.1",
    "vite-plugin-dts": "^4.5.3",
    "vitest": "^3.0.8"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["@biomejs/biome", "esbuild", "simple-git-hooks"],
    "overrides": {
      "vite-plugin-dts>@microsoft/api-extractor": "^7.51.1"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "pre-push": "pnpm test"
  },
  "lint-staged": {
    "*.{vue,js,jsx,cjs,mjs,ts,tsx,cts,mts}": [
      "pnpm biome lint --write",
      "pnpm eslint --cache --fix"
    ],
    "*.{js,jsx,cjs,mjs,ts,tsx,cts,mts}": "pnpm biome format --write"
  }
}
